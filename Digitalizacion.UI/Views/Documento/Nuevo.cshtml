@{
    ViewData["Title"] = "Nuevo Documento";
    var procesos = ViewBag.Procesos as List<SelectListItem>;
}

<form id="DocumentoNuevoFrm" enctype="multipart/form-data">
    <header class="container text-center mb-4">
        <div class="row">
            <div class="col">
                <h3>Nuevo Documento</h3>
            </div>
            <div class="col text-end">
                <p>@ViewBag.Mensaje</p>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="IdProcesoCbo" class="form-label">Proceso Asociado</label>
                <select id="IdProcesoCbo" class="form-select">
                    <option value="">-- Seleccione un proceso --</option>
                    @foreach (var item in ViewBag.Procesos as List<SelectListItem>)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>

            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="NombreDocumentoTxt" class="form-label">Nombre del Documento</label>
                <input id="NombreDocumentoTxt" type="text" class="form-control" placeholder="Ej: Acta de reunión" />
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="TipoDocumentoTxt" class="form-label">Tipo de Documento</label>
                <input id="TipoDocumentoTxt" type="text" class="form-control" placeholder="Informe, Resolución, Acta..." />
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="FormatoDocumentoTxt" class="form-label">Formato</label>
                <input id="FormatoDocumentoTxt" type="text" class="form-control" placeholder="PDF, DOCX, JPG..." />
            </div>
        </div>

        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="EstadoDocumentoTxt" class="form-label">Estado del Documento</label>
                <input id="EstadoDocumentoTxt" type="text" class="form-control" placeholder="Vigente, Archivado, Eliminado..." />
            </div>
        </div>

        <div class="row justify-content-center mb-4">
            <div class="col-md-6">
                <label for="ArchivoDocumento" class="form-label">Archivo</label>
                <input type="file" id="ArchivoDocumento" class="form-control" accept=".pdf,.doc,.docx,.jpg,.png" />
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-auto">
                <button id="GuardarBtn" type="button" class="btn btn-success me-2">Guardar</button>
                <button id="CancelarBtn" type="button" class="btn btn-danger" onclick="window.location.href='Index'">Cancelar</button>
            </div>
        </div>
    </main>
</form>

@section Scripts {
    <script src="~/views/documento/nuevo.js"></script>
}
