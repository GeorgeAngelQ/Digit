<form id="ResponsableNuevoFrm">
    <header class="container text-center mb-4">
        <div class="row">
            <div class="col">
                <h3>Nuevo Responsable</h3>
            </div>
            <div class="col text-end">
                <p>@ViewBag.Mensaje</p>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="NombreResponsableTxt" class="form-label">Nombre</label>
                <input id="NombreResponsableTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="ApellidoResponsableTxt" class="form-label">Apellido</label>
                <input id="ApellidoResponsableTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="CorreoResponsableTxt" class="form-label">Correo Electronico</label>
                <input id="CorreoResponsableTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="TelefonoResponsableTxt" class="form-label">Teléfono</label>
                <input id="TelefonoResponsableTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="CargoResponsableTxt" class="form-label">Cargo</label>
                <input id="CargoResponsableTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <button id="GuardarBtn" type="button" class="btn btn-success me-2">Guardar</button>
                <button id="CancelarBtn" type="button" class="btn btn-danger" onclick="window.location.href='index'">Cancelar</button>
            </div>
        </div>
    </main>
</form>

@section Scripts {
    <script src="~/views/responsable/nuevo.js"></script>
}
