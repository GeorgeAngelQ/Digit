<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Responsable - Index</title>
    <link rel="stylesheet" href="~/views/responsable/responsable.css">
</head>
<body>
    <header class="text-white text-center p-4">
        <h2>Responsable</h2>
        <h4>Index</h4>
    </header>
    <main class="container mt-4 text-white">
        <div class="row align-items-center mb-4">
            <div class="col-auto">
                <label for="FiltroTxt" class="form-label mb-0">Buscar Responsable:</label>
            </div>
            <div class="col">
                <input id="FiltroTxt" class="form-control" type="search" autocomplete="off" placeholder="Ingrese el nombre del responsable" />
            </div>
            <div class="col text-end">
                <a href="@Url.Action("Nuevo", "Responsable")" class="btn btn-success me-2">
                    <i class="fa-regular fa-square-plus"></i> Nuevo
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Retornar
                </a>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <table id="ResponsableGrid" class="table table-bordered table-dark text-center">
                    <thead>
                        <tr>
                            <th>Nombres y Apellidos</th>
                            <th>Correo Electronico</th>
                            <th>Teléfono</th>
                            <th>Cargo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="ResponsableBody">
                    </tbody>
                </table>
                <div class="row mt-2">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <button id="prevPage" class="btn btn-outline-light">Anterior</button>
                        <span id="pageInfo" class="text-white">Página 1 de 0</span>
                        <button id="nextPage" class="btn btn-outline-light">Siguiente</button>
                    </div>
                </div>

            </div>
        </div>
    </main>
    <script src="~/views/responsable/index.js"></script>
</body>
</html>