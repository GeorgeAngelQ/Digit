<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Digitalizacion.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Digitalizacion.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header class="navbar">
        <div class="navbar-left">
            <div class="logo">
                <img src="~/views/assets/warmakuyay.png" alt="LogoIE">
            </div>
            <span class="titulo">Sistema de Gestión Documental Escolar</span>
        </div>
        <nav class="navbar-right">
            <a href="@Url.Action("Index","Home")">Inicio</a>
            <a href="#">Documentos</a>
            <a href="#">Historial</a>
            <a href="@Url.Action("Index","UsuarioSistema")">Usuario</a>
            <a href="@Url.Action("Index","EquipoDigitalizacion")">Equipos</a>
            <a href="/logout">Cerrar Sesión</a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Digitalizacion.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
