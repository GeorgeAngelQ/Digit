<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Proceso - Index</title>
    <link rel="stylesheet" href="~/views/proceso/proceso.css">
</head>
<body>
    <header class="text-white text-center p-4">
        <h2>Proceso</h2>
        <h4>Index</h4>
    </header>

    <main class="container mt-4 text-white">
        <div class="row align-items-center mb-4">
            <div class="col-auto">
                <label for="FiltroTxt" class="form-label mb-0">Buscar Proceso:</label>
            </div>
            <div class="col">
                <input id="FiltroTxt" class="form-control" type="search" autocomplete="off" placeholder="Buscar por estado, prioridad, etc..." />
            </div>
            <div class="col text-end">
                <a href="@Url.Action("Nuevo", "Proceso")" class="btn btn-success me-2">
                    <i class="fa-regular fa-square-plus"></i> Nuevo
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Retornar
                </a>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <table id="ProcesoGrid" class="table table-bordered table-dark text-center">
                    <thead>
                        <tr>
                            <th>Responsable</th>
                            <th>Departamento</th>
                            <th>Equipo</th>
                            <th>Inicio</th>
                            <th>Fin</th>
                            <th>Estado</th>
                            <th>Prioridad</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="ProcesoBody">
                        <tr>
                            <td colspan="8" class="text-center">Cargando procesos...</td>
                        </tr>
                    </tbody>
                </table>

                <div class="row mt-2">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <button id="prevPage" class="btn btn-outline-light">Anterior</button>
                        <span id="pageInfo" class="text-white">Página 1 de 0</span>
                        <button id="nextPage" class="btn btn-outline-light">Siguiente</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="~/views/proceso/index.js"></script>
</body>
</html>
