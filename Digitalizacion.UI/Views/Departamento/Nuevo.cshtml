<form id="DepartamentoNuevoFrm">
    <header class="container text-center mb-4">
        <div class="row">
            <div class="col">
                <h3>Nuevo Departamento</h3>
            </div>
            <div class="col text-end">
                <p>@ViewBag.Mensaje</p>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="NombreDepartamentoTxt" class="form-label">Nombre</label>
                <input id="NombreDepartamentoTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="UbicacionDepartamentoTxt" class="form-label">Ubicacion</label>
                <input id="UbicacionDepartamentoTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="ExtensionDepartamentoTxt" class="form-label">Extension</label>
                <input id="ExtensionDepartamentoTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <button id="GuardarBtn" type="button" class="btn btn-success me-2">Guardar</button>
                <button id="CancelarBtn" type="button" class="btn btn-danger" onclick="window.location.href='index'">Cancelar</button>
            </div>
        </div>
    </main>
</form>

@section Scripts {
    <script src="~/views/departamento/nuevo.js"></script>
}
