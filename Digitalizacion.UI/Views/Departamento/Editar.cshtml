<form id="DepartamentoEditarFrm">
    <header class="container text-center mb-4">
        <div class="row">
            <div class="col">
                <h3>Editar Departamento</h3>
            </div>
            <div class="col text-end">
                <p>@ViewBag.Mensaje</p>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="row justify-content-center mb-3">
            <input id="IdDepartamentoTxt" type="hidden" value="@ViewBag.IdDepartamento" />
            <div class="col-md-6">
                <label for="NombreDepartamentoTxt" class="form-label">Nombre</label>
                <input id="NombreDepartamentoTxt" type="text" class="form-control" value="@ViewBag.Departamento.NombreDepartamento" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="UbicacionDepartamentoTxt" class="form-label">Ubicación</label>
                <input id="UbicacionDepartamentoTxt" type="text" class="form-control" value="@ViewBag.Departamento.UbicacionDepartamento" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="ExtensionDepartamentoTxt" class="form-label">Extension</label>
                <input id="ExtensionDepartamentoTxt" type="text" class="form-control" value="@ViewBag.Departamento.ExtensionDepartamento" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <button id="GuardarBtn" type="button" class="btn btn-success me-2">Guardar</button>
                <button id="CancelarBtn" type="button" class="btn btn-danger" onclick="window.location.href='../index'">Cancelar</button>
            </div>
        </div>
    </main>
</form>

@section Scripts {
    <script src="~/views/departamento/editar.js"></script>
}
