<header>
    <h2>Usuario</h2>
    <h4>Index</h4>
</header>

<main class="container">
    <div class="row align-items-center mb-4">
        <div class="col-auto">
            <label for="IdUsuarioTxt" class="form-label mb-0">Usuario:</label>
        </div>
        <div class="col-auto">
            <input id="IdUsuarioTxt" class="form-control" type="search" autocomplete="off" placeholder="Ingrese el ID" />
        </div>
        <div class="col">
            <div class="d-flex justify-content-end flex-wrap">
                <button id="FiltrarBtn" class="btn btn-primary me-2 mb-2" type="button">
                    <i class="fa-solid fa-filter"></i> Filtrar
                </button>
                <a href="@Url.Action("Nuevo", "UsuarioSistema")" class="btn btn-success me-2 mb-2" type="button">
                    <i class="fa-regular fa-square-plus"></i> Nuevo
                </a>
                <button id="EditarBtn" class="btn btn-warning me-2 mb-2" type="button">
                    <i class="fa-solid fa-marker"></i> Editar
                </button>
                <button id="EliminarBtn" class="btn btn-danger me-2 mb-2" type="button">
                    <i class="fa-solid fa-trash"></i> Eliminar
                </button>
                <a href="/" class="btn btn-secondary mb-2" type="button">
                    <i class="fa-solid fa-arrow-left"></i> Retornar
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-8 offset-2">
            <table id="UsuarioSistemaGrid">
                <div id="ResultadosDiv"></div>
            </table>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/views/usuariosistema/index.js"></script>
}
