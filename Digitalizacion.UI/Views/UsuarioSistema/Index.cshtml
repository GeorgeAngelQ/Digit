<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Usuario - Index</title>
    <link rel="stylesheet" href="~/views/usuariosistema/usuariosistema.css">
</head>
<body>
    <header class="text-white text-center p-4">
        <h2>Usuario</h2>
        <h4>Index</h4>
    </header>
    <main class="container mt-4 text-white">
        <div class="row align-items-center mb-4">
            <div class="col-auto">
                <label for="FiltroTxt" class="form-label mb-0">Buscar Usuario:</label>
            </div>
            <div class="col">
                <input id="FiltroTxt" class="form-control" type="search" autocomplete="off" placeholder="Ingrese el nombre de usuario" />
            </div>
            <div class="col text-end">
                <a href="@Url.Action("Nuevo", "UsuarioSistema")" class="btn btn-success me-2">
                    <i class="fa-regular fa-square-plus"></i> Nuevo
                </a>
                <a href="/" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Retornar
                </a>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <table id="UsuarioSistemaGrid" class="table table-bordered table-dark text-center">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Contraseña</th>
                            <th>Nombre Completo</th>
                            <th>Correo</th>
                            <th>Rol</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="UsuarioSistemaBody">
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <script src="~/views/usuariosistema/index.js"></script>
</body>
</html>