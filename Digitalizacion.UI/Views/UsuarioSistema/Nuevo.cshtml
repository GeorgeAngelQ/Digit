<form id="UsuarioSistemaNuevoFrm">
    <header class="container text-center mb-4">
        <div class="row">
            <div class="col">
                <h3>Nuevo Usuario</h3>
            </div>
            <div class="col text-end">
                <p>@ViewBag.Mensaje</p>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="NombreCompletoTxt" class="form-label">Nombre Completo</label>
                <input id="NombreCompletoTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="CorreoElectronicoTxt" class="form-label">Corrreo Electronico</label>
                <input id="CorreoElectronicoTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="UsuarioTxt" class="form-label">Usuario</label>
                <input id="UsuarioTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="ContraseniaTxt" class="form-label">Contraseña</label>
                <input id="ContraseniaTxt" type="password" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center mb-3">
            <div class="col-md-6">
                <label for="RolTxt" class="form-label">Rol</label>
                <input id="RolTxt" type="text" class="form-control" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-auto">
                <button id="GuardarBtn" type="button" class="btn btn-success me-2">Guardar</button>
                <button id="CancelarBtn" type="button" class="btn btn-danger" onclick="window.location.href='index'">Cancelar</button>
            </div>
        </div>
    </main>
</form>

@section Scripts {
    <script src="~/views/usuariosistema/nuevo.js"></script>
}
